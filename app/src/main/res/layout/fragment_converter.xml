<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tgk.Elet.CalendarFragment">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/darkGrey"
        android:text="@string/converter"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="7dp"
        android:textAlignment="center"
        android:fontFamily="@font/abyssinica"
        android:textColor="@color/white"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_card_parent"
        android:layout_below="@id/title_text"
        app:cardBackgroundColor="@color/Neon"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="10dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="9dp"
            android:padding="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="0dp"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/from_geez"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="@string/from_geez"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:fontFamily="@font/abyssinica"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/from_gregorian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text="@string/from_Gregorian"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:fontFamily="@font/abyssinica"
                    android:textAlignment="gravity"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>

    <com.tgk.Elet.myDatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs_card_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/res"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/date_picker"
        android:weightSum="6">
        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="18sp"
            android:background="@color/darkGrey"
            android:textColor="@color/red_ish"
            android:gravity="start|center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/abyssinica"
            android:layout_marginBottom="6dp"/>
        <Button
            android:id="@+id/convert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="0dp"
            android:text="@string/convert"
            android:fontFamily="@font/abyssinica"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res"
        android:textSize="18sp"
        android:elegantTextHeight="true"
        android:textColor="@color/red_ish"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/abyssinica"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_of_week"
        android:background="@color/lightGrey"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <ListView
            android:id="@+id/holidays_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/lightGrey"
            android:background="@color/white"
            android:dividerHeight="0.7dp"
            android:layout_margin="0.7dp"
            android:scrollbars="none"/>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4828771438306346/7691437583">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>